<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SuGarToolkit.WinUI3.Controls.NativeLikeCaptionButton">

    <x:String x:Key="CaptionMinimizeButtonGlyph">&#xE921;</x:String>
    <x:String x:Key="CaptionMaximizeButtonGlyph">&#xE922;</x:String>
    <x:String x:Key="CaptionRestoryButtonGlyph">&#xE923;</x:String>
    <x:String x:Key="CaptionCloseButtonGlyph">&#xE8BB;</x:String>
    <x:Double x:Key="CaptionButtonWidth">48</x:Double>
    <x:Double x:Key="CaptionButtonIconFontSize">10</x:Double>
    <x:Double x:Key="CaptionButtonInactiveOpacity">0.382</x:Double>

    <!--  BackgroundColors  -->
    <Color x:Key="CaptionCloseButtonHoverBackgroundColor">#C42B1C</Color>
    <Color x:Key="CaptionCloseButtonPressedBackgroundColor">#C74031</Color>
    <Color x:Key="CaptionButtonHoverBackgroundColor">#10000000</Color>
    <Color x:Key="CaptionButtonPressedBackgroundColor">#08000000</Color>

    <!--  BackgroundBrushes  -->
    <SolidColorBrush x:Key="CaptionCloseButtonHoverBackground" Color="{StaticResource CaptionCloseButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionCloseButtonPressedBackground" Color="{StaticResource CaptionCloseButtonPressedBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionButtonHoverBackground" Color="{StaticResource CaptionButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="CaptionButtonPressedBackground" Color="{StaticResource CaptionButtonPressedBackgroundColor}" />

    <!--  ForegroundColors  -->
    <StaticResource x:Key="CaptionButtonForegroundColor" ResourceKey="TitleBarCaptionButtonHoverForegroundColor" />
    <StaticResource x:Key="CaptionCloseButtonHoverForegroundColor" ResourceKey="TextFillColorInverse" />
    <StaticResource x:Key="CaptionCloseButtonPressedForegroundColor" ResourceKey="TextFillColorInverse" />
    <StaticResource x:Key="CaptionButtonHoverForegroundColor" ResourceKey="TitleBarCaptionButtonHoverForegroundColor" />
    <StaticResource x:Key="CaptionButtonPressedForegroundColor" ResourceKey="TitleBarCaptionButtonHoverForegroundColor" />

    <!--  ForegroundBrushes  -->
    <SolidColorBrush x:Key="CaptionButtonForeground" Color="{StaticResource CaptionButtonForegroundColor}" />
    <SolidColorBrush
        x:Key="CaptionButtonDisabledForeground"
        Opacity="{StaticResource CaptionButtonInactiveOpacity}"
        Color="{StaticResource CaptionButtonForegroundColor}" />
    <SolidColorBrush
        x:Key="CaptionCloseButtonHoverForeground"
        Opacity="1.0"
        Color="{StaticResource CaptionCloseButtonHoverForegroundColor}" />
    <SolidColorBrush
        x:Key="CaptionCloseButtonPressedForeground"
        Opacity="0.618"
        Color="{StaticResource CaptionCloseButtonPressedForegroundColor}" />
    <SolidColorBrush
        x:Key="CaptionButtonHoverForeground"
        Opacity="1.0"
        Color="{StaticResource CaptionButtonHoverForegroundColor}" />
    <SolidColorBrush
        x:Key="CaptionButtonPressedForeground"
        Opacity="0.618"
        Color="{StaticResource CaptionButtonPressedForegroundColor}" />

</ResourceDictionary>
