<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SuGarToolkit.WinUI3.Controls.NativeLikeCaptionButton">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SuGarToolkit.WinUI3.Controls.NativeLikeCaptionButton/NativeLikeTitleBar_themeresource.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="local:NativeLikeTitleBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:NativeLikeTitleBar">
                    <Grid
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            x:Name="HeaderArea"
                            Grid.Column="0"
                            Margin="{StaticResource NativeLikeTitleBarButtonAreaMargin}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"
                            Orientation="Horizontal"
                            Spacing="{StaticResource NativeLikeTitleBarButtonSpacing}">
                            <Button
                                x:Name="BackButton"
                                Width="{StaticResource NativeLikeTitleBarButtonWidth}"
                                Margin="0"
                                Style="{ThemeResource TitleBarBackButtonStyle}" />
                            <Button
                                x:Name="PaneToggleButton"
                                Width="{StaticResource NativeLikeTitleBarButtonWidth}"
                                Margin="0"
                                Style="{ThemeResource TitleBarPaneToggleButtonStyle}" />
                            <Rectangle Width="{ThemeResource TitleBarLeftHeaderPaddingWidth}" />
                            <ContentControl
                                x:Name="CustomHeaderArea"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Content="{TemplateBinding CustomHeader}" />
                        </StackPanel>
                        <ContentPresenter
                            x:Name="CenterArea"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Stretch"
                            Content="{TemplateBinding Content}" />
                        <StackPanel
                            x:Name="FooterArea"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Orientation="Horizontal">
                            <ContentControl
                                x:Name="CustomFooterArea"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Content="{TemplateBinding CustomFooter}" />
                            <local:CaptionButtonBar
                                x:Name="CaptionButtonBar"
                                MinHeight="0"
                                VerticalAlignment="Stretch"
                                CloseButtonVisibility="{TemplateBinding CloseButtonVisibility}"
                                IsCloseButtonEnabled="{TemplateBinding IsCloseButtonEnabled}"
                                IsMaximizeButtonEnabled="{TemplateBinding IsMaximizeButtonEnabled}"
                                IsMinimizeButtonEnabled="{TemplateBinding IsMinimizeButtonEnabled}"
                                MaximizeButtonVisibility="{TemplateBinding MaximizeButtonVisibility}"
                                MinimizeButtonVisibility="{TemplateBinding MinimizeButtonVisibility}"
                                OwnerWindow="{TemplateBinding OwnerWindow}" />
                        </StackPanel>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ActiveStates">
                                <VisualState x:Name="Active" />
                                <VisualState x:Name="Inactive">
                                    <VisualState.Setters>
                                        <Setter Target="BackButton.Opacity" Value="{ThemeResource TitleBarButtonInactiveOpacity}" />
                                        <Setter Target="PaneToggleButton.Opacity" Value="{ThemeResource TitleBarButtonInactiveOpacity}" />
                                        <Setter Target="CustomHeaderArea.Opacity" Value="{ThemeResource TitleBarButtonInactiveOpacity}" />
                                        <Setter Target="CenterArea.Opacity" Value="{ThemeResource TitleBarButtonInactiveOpacity}" />
                                        <Setter Target="CustomFooterArea.Opacity" Value="{ThemeResource TitleBarButtonInactiveOpacity}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
